<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.openmobster.core.mobileCloud.android</groupId>
		<artifactId>mobileCloud-android</artifactId>
		<version>2.0-snapshot</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<groupId>org.openmobster.core.mobileCloud.android</groupId>
	<artifactId>2_0</artifactId>
	<name>mobileCloud-android</name>
	<packaging>pom</packaging>
	<version>2.0-snapshot</version>
	
	<properties>
		<version.android.api>5</version.android.api>
		<android.keystore.location>c:/projects/openmobster/openmobster-release-key.keystore</android.keystore.location>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>android</groupId>
				<artifactId>android</artifactId>
				<version>2.0</version>
				<scope>system</scope>
				<systemPath>${env.ANDROID_HOME}/platforms/android-${version.android.api}/android.jar</systemPath>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>android</groupId>
			<artifactId>android</artifactId>
		</dependency>
	</dependencies>

	<modules>
		<module>cloudManager</module>
		<module>common</module>
		<module>mobileObject</module>
		<module>sync</module>
		<module>bus</module>
		<module>connection</module>
		<module>api</module>
		<module>mobileCloud-runtime</module>
		<module>moblet-runtime</module>
		<module>native-framework</module>
		<module>test-suite</module>
		<!-- aggregations -->
		<module>device-sdk</module>
		<module>mobileCloud</module>
	</modules>
	
	<profiles>
		<profile>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jarsigner-plugin</artifactId>
						<version>1.2</version>
						<executions>
							<execution>
								<id>signing</id>
								<goals>
									<goal>sign</goal>
								</goals>
								<phase>package</phase>
								<inherited>true</inherited>
								<configuration>
									<archiveDirectory></archiveDirectory>
									<includes>
										<include>target/*.apk</include>
									</includes>
									<keystore>${android.keystore.location}</keystore>
									<storepass>password</storepass>
									<keypass>password</keypass>
									<alias>openmobster</alias>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
