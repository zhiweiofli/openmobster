<project>
	<modelVersion>4.0.0</modelVersion>

	<!-- User Provided -->	
	<parent>
		<groupId><appCreator.project.groupId></groupId>
		<artifactId><appCreator.project.artifactId></artifactId>
		<version><appCreator.project.version></version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<groupId><appCreator.moblet.groupId></groupId>
	<name><appCreator.moblet.name></name>
	<artifactId><appCreator.moblet.artifactId></artifactId>
	<packaging>jar</packaging>
	
	
	<profiles>
		<profile>
			<id>android</id>
			<dependencies>
				<dependency>
	      			<groupId><appCreator.cloud.app.groupId></groupId>
	      			<artifactId><appCreator.cloud.app.artifactId></artifactId>
	      			<version>${project.version}</version>
	    		</dependency>

				<dependency>
			      <groupId><appCreator.android.app.groupId></groupId>
			      <artifactId><appCreator.android.app.artifactId></artifactId>
			      <version>${project.version}</version>
			      <classifier>bin</classifier>
			    </dependency>
			</dependencies>
		</profile>
		<profile>
			<id>rimos</id>
			<dependencies>
				<dependency>
	      			<groupId><appCreator.cloud.app.groupId></groupId>
	      			<artifactId><appCreator.cloud.app.artifactId></artifactId>
	      			<version>${project.version}</version>
	    		</dependency>

				<dependency>
			      <groupId><appCreator.rimos.app.groupId></groupId>
			      <artifactId><appCreator.rimos.app.artifactId></artifactId>
			      <version>${project.version}</version>
			      <classifier>bin</classifier>
			    </dependency>
			</dependencies>
		</profile>
		
		<profile>
			<id>android-release</id>
			<dependencies>
				<dependency>
	      			<groupId><appCreator.cloud.app.groupId></groupId>
	      			<artifactId><appCreator.cloud.app.artifactId></artifactId>
	      			<version>${project.version}</version>
	    		</dependency>

				<dependency>
			      <groupId><appCreator.android.app.groupId></groupId>
			      <artifactId><appCreator.android.app.artifactId></artifactId>
			      <version>${project.version}</version>
			      <classifier>bin</classifier>
			    </dependency>
			</dependencies>
		</profile>
	</profiles>
    
    <!--
			DO NOT MODIFY: Required by the OpenMobster Mobile Cloud Platform  
	-->
    <build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-5</version>
				<configuration>
					<descriptors>
						<descriptor>src/assemble/moblet.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>moblet</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>