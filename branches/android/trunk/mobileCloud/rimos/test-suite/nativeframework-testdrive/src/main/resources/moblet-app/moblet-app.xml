	<commands>
		<command id="startup">org.openmobster.core.mobileCloud.rim_native.framework.command.MobletBootstrapCommand</command>
		<command id="/demo/local">org.openmobster.core.mobileCloud.rim_native.framework.sample.commands.DemoLocalCommand</command>
		<command id="/demo/remote">org.openmobster.core.mobileCloud.rim_native.framework.sample.commands.DemoRemoteCommand</command>
		<command id="/demo/localAppException">org.openmobster.core.mobileCloud.rim_native.framework.sample.commands.LocalAppExceptionCommand</command>
		<command id="/demo/remoteAppException">org.openmobster.core.mobileCloud.rim_native.framework.sample.commands.RemoteAppExceptionCommand</command>
